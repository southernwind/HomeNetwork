- hosts: dhcp
  become: yes
  remote_user: pi
  gather_facts: no
  tasks: 
    - name: Install the package "dnsmasq"
      apt:
        name: dnsmasq
        update_cache: yes
        state: present
    - name: Copy dmsmasq.conf
      copy: 
        src: ./dnsmasq/dnsmasq.conf
        dest: /etc/dnsmasq.conf
      notify:
        - restart dnsmasq
    - name: Copy dmsmasq-hosts
      copy:
        src: ./dnsmasq/dnsmasq-hosts
        dest: /etc/dnsmasq-hosts
      notify:
        - restart dnsmasq

    - name: Install the package "nginx"
      apt:
        name: nginx
        state: present
  handlers:
    - name: restart dnsmasq
      service: name=dnsmasq state=restarted